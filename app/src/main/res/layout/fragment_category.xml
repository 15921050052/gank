<!--xmlns:app="http://schemas.android.com/apk/res-auto" 引入外部属性-->
<com.vlonjatg.progressactivity.ProgressActivity
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:progressActivity="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/progressActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    progressActivity:progressLoadingStateBackgroundColor="#FFFFFF"
    progressActivity:progressEmptyStateBackgroundColor="#fbc02d"
    progressActivity:progressEmptyStateContentTextColor="#FFFFFF"
    progressActivity:progressEmptyStateTitleTextColor="#FFFFFF"
    progressActivity:progressErrorStateBackgroundColor="#42a5f5"
    progressActivity:progressErrorStateButtonTextColor="#FFFFFF"
    progressActivity:progressErrorStateContentTextColor="#FFFFFF"
    progressActivity:progressErrorStateTitleTextColor="#FFFFFF">


    <com.malinskiy.superrecyclerview.SuperRecyclerView
        android:id="@+id/superRecyclerView_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        app:layout_empty="@layout/view_empty"
        app:layout_moreProgress="@layout/view_more_progress"
        app:mainLayoutId="@layout/layout_recyclerview_verticalscroll"
        app:recyclerClipToPadding="false"
        android:scrollbars="none"
        android:scrollbarStyle="outsideInset"
        />

</com.vlonjatg.progressactivity.ProgressActivity>


